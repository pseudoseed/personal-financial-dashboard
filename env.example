# Personal Financial Dashboard Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="file:./data/dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Plaid API Configuration
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret-key"
PLAID_ENV="sandbox"  # sandbox, development, or production

# Coinbase API Configuration
COINBASE_CLIENT_ID="your-coinbase-client-id"
COINBASE_CLIENT_SECRET="your-coinbase-client-secret"
COINBASE_REDIRECT_URI="http://localhost:3000/api/crypto/oauth/callback"

# OpenAI API Configuration (for transaction categorization)
OPENAI_API_KEY="your-openai-api-key"

# Email Configuration (for notifications)
# Gmail SMTP Example:
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"

# AWS SES Example (alternative to Gmail):
# EMAIL_SERVER_HOST="email-smtp.us-east-1.amazonaws.com"
# EMAIL_SERVER_PORT="587"
# EMAIL_SERVER_USER="your-ses-smtp-username"
# EMAIL_SERVER_PASSWORD="your-ses-smtp-password"
# EMAIL_FROM="your-verified-email@domain.com"

# Application Configuration
NODE_ENV="development"  # development, production
PORT="3000"

# Optional: Custom domain for production
# NEXTAUTH_URL="https://your-domain.com"
# COINBASE_REDIRECT_URI="https://your-domain.com/api/crypto/oauth/callback" 